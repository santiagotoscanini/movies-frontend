<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/myanmar_mn</item>
    </style>

    <style name="BasePrimaryButtonStyle">
        <item name="android:background">@drawable/rounded_corners_primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/margin_40dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_40dp</item>
    </style>

    <style name="TeamButtonStyle">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/alef_regular</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="StartButtonStyle">
        <item name="android:layout_marginStart">@dimen/margin_40dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corners_start_color</item>
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">23sp</item>
        <item name="elevation">10dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_30dp</item>
    </style>
</resources>