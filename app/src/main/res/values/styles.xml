<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/myanmar_mn</item>
    </style>

    <style name="BasePrimaryButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@drawable/rounded_corners_primary_color</item>
    </style>

    <style name="BaseGreenButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@drawable/rounded_corners_start_color</item>
    </style>

    <style name="BaseRedButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@drawable/rounded_corners_cancel_color</item>
    </style>

    <style name="BaseGreyButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@drawable/rounded_corners_grey_color</item>
    </style>

    <style name="BaseButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/margin_40dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_40dp</item>
    </style>

    <style name="TeamButtonStyle">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/alef_regular</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="StartButtonStyle">
        <item name="android:layout_marginStart">@dimen/margin_40dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corners_start_color</item>
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">23sp</item>
        <item name="elevation">10dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_30dp</item>
    </style>

    <style name="CheckButtonStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:layout_marginTop">@dimen/margin_50dp</item>
    </style>

    <style name="TeamPieceStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">@dimen/team_piece_size</item>
        <item name="android:layout_height">@dimen/team_piece_size</item>
    </style>

    <style name="RoundedImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>

    <style name="RoundedBigImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="LoaderTextStyle">
        <item name="android:fontFamily">@font/alef_regular</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">@dimen/margin_30dp</item>
    </style>

    <style name="StartButtonInvertStyle">
        <item name="android:layout_marginStart">@dimen/margin_40dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_40dp</item>
        <item name="android:textColor">#86D56E</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">23sp</item>
        <item name="elevation">10dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="InstructionTextStyle">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MovieTitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="TimerStyle">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InstructionsStyle">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MovieItemPositionStyle">
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="MovieItemNameStyle">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>
</resources>
